<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mathgame"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.mathgame.MainMenu"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.mathgame.PlayOptions"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="com.example.mathgame.PLAYOPTIONS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.mathgame.GameEMH"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="com.example.mathgame.GAMEEMH" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.mathgame.GameChallenge"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.GAMECHALLENGE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.mathgame.PracticeOptions"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.PRACTICEOPTIONS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.mathgame.Game_Practice"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.GAMEPRACTICE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.mathgame.Score"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.SCORE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
